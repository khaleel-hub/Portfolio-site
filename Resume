                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group">
                            <label>Start Year</label>
                            <input type="number" data-field="startYear" onchange="updateResumeData()" min="1900" max="2030">
                        </div>
                        <div class="form-group">
                            <label>End Year</label>
                            <input type="number" data-field="endYear" onchange="updateResumeData()" min="1900" max="2030">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Location</label>
                        <input type="text" data-field="location" onchange="updateResumeData()">
                    </div>
                    <div class="form-group">
                        <label>GPA (Optional)</label>
                        <input type="text" data-field="gpa" onchange="updateResumeData()">
                    </div>
                </div>
            `;
            
            container.insertAdjacentHTML('beforeend', educationHTML);
        }

        function addLanguage() {
            const container = document.getElementById('languagesContainer');
            const id = Date.now();
            
            const languageHTML = `
                <div class="dynamic-section" id="language-${id}">
                    <div class="section-header">
