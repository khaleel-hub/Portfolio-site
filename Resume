            `;
            
            container.insertAdjacentHTML('beforeend', certificationHTML);
        }

        function handleCertificateUpload(event, id) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    // Store the file data for the specific certification
                    console.log(`Certificate uploaded for certification ${id}`);
                    updateResumeData();
                };
                reader.readAsDataURL(file);
            }
        }

        function removeSection(sectionId) {
            document.getElementById(sectionId).remove();
            updateResumeData();
        }

        // Skills Input
        function initializeSkillsInput() {
            const skillInput = document.getElementById('skillInput');
            const hobbyInput = document.getElementById('hobbyInput');
            
            skillInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && this.value.trim()) {
                    addSkill(this.value.trim());
                    this.value = '';
                }
            });
            
            hobbyInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter' && this.value.trim()) {
                    addHobby(this.value.trim());
                    this.value = '';
                }
            });
        }

        function addSkill(skill) {
            const container = document.getElementById('skillsContainer');
            const skillElement = document.createElement('div');
            skillElement.className = 'skill-tag';
            skillElement.innerHTML = `
                ${skill}
                <button class="remove-skill" onclick="removeSkill(this)">
                    <i class="fas fa-times"></i>
                </button>
            `;
            container.appendChild(skillElement);
            
            resumeData.skills.push(skill);
            updatePreview();
        }

        function addHobby(hobby) {
            const container = document.getElementById('hobbiesContainer');
            const hobbyElement = document.createElement('div');
            hobbyElement.className = 'skill-tag';
            hobbyElement.innerHTML = `
                ${hobby}
                <button class="remove-skill" onclick="removeHobby(this)">
                    <i class="fas fa-times"></i>
                </button>
            `;
            container.appendChild(hobbyElement);
            
            resumeData.hobbies.push(hobby);
            updatePreview();
        }

        function removeSkill(button) {
            const skillTag = button.parentElement;
            const skill = skillTag.textContent.trim();
            const index = resumeData.skills.indexOf(skill);
            if (index > -1) {
                resumeData.skills.splice(index, 1);
            }
